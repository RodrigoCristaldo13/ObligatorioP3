@model Papeleria.LogicaAplicacion.DataTransferObjects.DTOs.UsuarioDto

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container row justify-content-center align-items-center">
    <div class="card col-md-6">
        <div class="card-body">
            <h1 class="card-title text-center">Nuevo Usuario</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej. Miguel" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Apellido" class="control-label">Apellido</label>
                    <input asp-for="Apellido" class="form-control" placeholder="Ej. Romero" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Ej. miguel@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Ej. MRom.123" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <input asp-for="PasswordEncriptada" type="hidden" />

                @if (ViewBag.msgErrorEmail != null)
                {
                    <h5 class="text-danger">@ViewBag.msgErrorEmail</h5>
                }

                <div class="form-group mt-5 text-center">
                    <button type="submit" class="btn btn-success">Confirmar
                        <img src="~/img/completar.svg" class="btn-close-white px-2" title="Nuevo Usuario" alt="Nuevo Usuario">
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Volver
                        <img src="~/img/volver.svg" class="btn-close-white px-2" title="Volver" alt="Volver">
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
