@model Papeleria.LogicaAplicacion.DataTransferObjects.DTOs.UsuarioDto

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="card-title">Detalles de Usuario</h1>
                </div>
                <div class="card-body">
                    @if (ViewBag.msgError == null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.Nombre</dd>
                            <dt class="col-sm-4">Apellido:</dt>
                            <dd class="col-sm-8">@Model.Apellido</dd>
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                            <dt class="col-sm-4">Contraseña:</dt>
                            <dd class="col-sm-8">@Model.Password</dd>
                            <dt class="col-sm-4">Contraseña Encriptada:</dt>
                            <dd class="col-sm-8">@Model.PasswordEncriptada</dd>
                        </dl>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <h3>@ViewBag.msgError</h3>
                        </div>
                    }
                </div>

                <div class="card-footer text-start">
                    <a asp-action="Index" class="btn btn-secondary"> Volver
                        <img src="~/img/volver.svg" class="btn-close-white px-2" title="Atrás" alt="Atrás">
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"> Editar
                        <img src="~/img/editar.svg" class="btn-close-white px-2" title="Editar" alt="Editar">
                    </a>
                </div>

            </div>
        </div>  
    </div>
</div>
