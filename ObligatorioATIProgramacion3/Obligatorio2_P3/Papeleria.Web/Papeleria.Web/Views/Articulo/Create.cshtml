@model Papeleria.LogicaAplicacion.DataTransferObjects.DTOs.ArticuloDto

@{
    ViewData["Title"] = "Nuevo Articulo";
}

<div class="container row justify-content-center align-items-center">
    <div class="card col-md-6">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Agregar Articulo</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej. Libreta Escolar"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción:</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ej. Libreta de hojas blancas ralladas" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CodProd" class="control-label">Código de Producto:</label>
                    <input asp-for="CodProd" type="number" placeholder="Ej. 1234567891012" class="form-control" />
                    <span asp-validation-for="CodProd" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Precio" class="control-label">Precio:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$U</span>
                        </div>
                        <input asp-for="Precio" type="number" placeholder="Ej. 120" class="form-control" />
                    </div>
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="control-label">Stock:</label>
                    <input asp-for="Stock" type="number" placeholder="Ej. 100" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                @if (ViewBag.msgValidacion != null || ViewBag.msgError != null)
                {
                    <div class="alert alert-danger mt-4">
                        <h5>@ViewBag.msgValidacion</h5>
                        <h5>@ViewBag.msgError</h5>
                    </div>
                }
                <div class="form-group text-center mt-5">
                    <button type="submit" class="btn btn-success">
                        Confirmar
                        <img src="~/img/completar.svg" class="btn-close-white px-2" title="Nuevo Usuario" alt="Nuevo Usuario">
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Volver
                        <img src="~/img/volver.svg" class="btn-close-white px-2" title="Volver" alt="Volver">
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
