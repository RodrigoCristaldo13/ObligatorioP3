@model Papeleria.LogicaAplicacion.DataTransferObjects.DTOs.UsuarioDto

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title">Eliminar Usuario</h1>

                </div>
                @if (ViewBag.msgError == null)
                {
                    <div class="card-body">
                        <h5>Esta seguro de eliminar el usuario? Esta acción no se puede deshacer</h5>

                        <div>
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Apellido)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Password)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PasswordEncriptada)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.PasswordEncriptada)</dd>
                            </dl>

                        </div>
                        <form asp-action="Delete" asp-route-id="@Model.Id">
                            <button type="submit" class="btn btn-danger mx-2">
                                Eliminar
                                <img src="~/img/eliminar.svg" class="btn-close-white px-2" title="Eliminar" alt="Eliminar">
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <h3 class="text-danger">@ViewBag.msgError</h3>
                    </div>
                }
                <div class="d-flex card-footer bg-white text-start">
                    <a asp-action="Index" class="btn btn-secondary">
                        Volver
                        <img src="~/img/volver.svg" class="btn-close-white px-2" title="Atrás" alt="Atrás">
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>


