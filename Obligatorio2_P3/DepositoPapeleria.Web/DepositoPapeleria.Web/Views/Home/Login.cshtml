@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center display-6">Iniciar Sesión</h1>
                <hr />
                <form asp-action="Login">
                    <div class="form-group">
                        <label for="Email" class="control-label">Correo electrónico</label>
                        <input id="Email" class="form-control" type="email" name="correo" required />
                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label">Contraseña</label>
                        <input id="Password" class="form-control" type="password" name="password" required />
                    </div>
                    <br />
                    <div class="form-group d-grid gap-2">
                        <input type="submit" value="Ingresar" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
            <div class="card-footer">
                @if (ViewBag.MensajeLogin != null)
                {
                    <div class="alert alert-danger">@ViewBag.MensajeLogin</div>
                }
                <br />
                <div class="d-grid gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Volver a Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>